<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SRCStudios.tictactoe.P1GameActivity">

    <TableLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnP1_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_1"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnP1_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_2"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnP1_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_3"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnP1_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_4" />

            <ImageButton
                android:id="@+id/btnP1_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_5" />

            <ImageButton
                android:id="@+id/btnP1_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnP1_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_7" />

            <ImageButton
                android:id="@+id/btnP1_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_8" />

            <ImageButton
                android:id="@+id/btnP1_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="btnP1_9" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>